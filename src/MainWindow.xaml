<Window x:Class="ProgramaOTLauncher.MainWindow"
		xmlns:system="clr-namespace:System;assembly=mscorlib"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:ProgramaOTLauncher"
        Icon="pack://application:,,,/assets/launcher_ico.png"
		mc:Ignorable="d" 
		Height="400"
		Width="800"
		FontFamily="Verdana"
		Background="#131415"
		x:Name="home"
		WindowStyle="None"
		ResizeMode="NoResize"
		WindowState="Normal"
		WindowStartupLocation="CenterScreen"
		Title="Programa OT Launcher"
		Loaded="TibiaLauncher_Load" >
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.Resources>
            <BitmapImage x:Key="BackGroundKey" UriSource="pack://application:,,,/assets/background.jpg"/>
            <BitmapImage x:Key="LogoKey" UriSource="pack://application:,,,/assets/logo.png"/>
            <BitmapImage x:Key="LogoCompanyKey" UriSource="pack://application:,,,/assets/logo_company.png"/>
            <BitmapImage x:Key="BGButtonUpdateKey" UriSource="pack://application:,,,/assets/bg_button_update.png"/>
            <BitmapImage x:Key="ButtonPlayKey" UriSource="pack://application:,,,/assets/button_play.png"/>
            <BitmapImage x:Key="IconPlayKey" UriSource="pack://application:,,,/assets/icon_play.png"/>
            <BitmapImage x:Key="BgHintsKey" UriSource="pack://application:,,,/assets/bg_hints.png"/>
            <BitmapImage x:Key="RhLoreKey" UriSource="pack://application:,,,/assets/rh_lore.png"/>
            <!-- Usa caminho em minúsculas para casar com os Resources incluídos no csproj (assets/...) -->
            <BitmapImage x:Key="IconUpdateKey" UriSource="pack://application:,,,/assets/icon_update.png"/>
        </Grid.Resources>
        <Grid.Background>
            <ImageBrush ImageSource="{StaticResource BackGroundKey}" Stretch="UniformToFill" Opacity="1"></ImageBrush>
        </Grid.Background>
        <StackPanel
			Grid.Column="1"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Margin="0"
			Orientation="Horizontal"
			FlowDirection="RightToLeft">
            <Button
				x:Name="CloseButton"
				Style="{StaticResource WindowButtonStyle}"
				Content="{StaticResource close_ico}"
				Click="CloseButton_Click"
				Tag="IsCloseButton"
				Cursor="Hand"/>
            <Button
				x:Name="MinimizeButton"
				Style="{StaticResource WindowButtonStyle}"
				Content="{StaticResource minimize_ico}"
				Click="MinimizeButton_Click"
				Cursor="Hand"/>
        </StackPanel>

        <StackPanel
			Grid.Row="0"
			VerticalAlignment="Bottom"
			HorizontalAlignment="Center"
			Margin="0, 15">
            <Image
				x:Name="ImageLogoServer"
				Height="120"
				Source="{StaticResource LogoKey}"
				Stretch="Uniform"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Visibility="Hidden">
            </Image>
        </StackPanel>
        <StackPanel
			Grid.Row="1"
			Width="132"
			Height="85"
			VerticalAlignment="Top"
			HorizontalAlignment="Center">
            <StackPanel.Background>
                <ImageBrush ImageSource="{StaticResource BGButtonUpdateKey}" Stretch="Fill"></ImageBrush>
            </StackPanel.Background>
            <StackPanel>
                <Button
					x:Name="buttonPlay"
					Width="100"
					Height="42"
					Margin="0, 8, 0, 0"	
					BorderThickness="0"
					Cursor="Hand"
					BorderBrush="{x:Null}"
					Visibility="Visible"
					Click="buttonPlay_Click"
					MouseLeave="buttonPlay_MouseLeave"
					MouseEnter="buttonPlay_MouseEnter">

                    <Button.Background>
                        <ImageBrush ImageSource="{StaticResource ButtonPlayKey}"></ImageBrush>
                    </Button.Background>

                    <Button.ToolTip>
                        <ToolTip>
                            <TextBlock
								x:Name="buttonPlay_tooltip"
								Foreground="#404348"
								FontWeight="Bold"
								Text="Play Game">
                            </TextBlock>
                        </ToolTip>
                    </Button.ToolTip>

                    <Button.Content>
                        <Image
							x:Name="buttonPlayIcon"
							Source="{StaticResource IconPlayKey}"
							Stretch="Uniform"
							Height="32"></Image>
                    </Button.Content>
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True"></Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <ProgressBar
					x:Name="progressbarDownload"
					Width="100"
					Height="40"
					Margin="0, 8, 0, 0"
					Value="100"
					Visibility="Collapsed">
                    <ProgressBar.Foreground>
                        <LinearGradientBrush
								StartPoint="0.5, 1.5"
								EndPoint="0.5, 0">
                            <GradientStop Color="#dd9323" Offset="0.4" />
                            <GradientStop Color="#6b4711" Offset="0.8" />
                        </LinearGradientBrush>
                    </ProgressBar.Foreground>
                </ProgressBar>
                <Label
					x:Name="labelClientVersion"
					FontFamily="Verdana"
					FontSize="13"
					FontWeight="Bold"
					Foreground="#bfbfbf"
					HorizontalAlignment="Center"
					Margin="0, 2, 0, 0"
					Visibility="Visible">Client Version</Label>
                <Label
					x:Name="labelDownloadPercent"
					FontFamily="Verdana"
					FontSize="10"
					FontWeight="Bold"
					Foreground="#bfbfbf"
					HorizontalAlignment="Center"
					Margin="0, 2, 0, 0"
					Visibility="Collapsed">Download</Label>
            </StackPanel>
        </StackPanel>
        <StackPanel
			Grid.Row="2"
			Width="550"
			Height="86"
			VerticalAlignment="Top"
			HorizontalAlignment="Center">
            <StackPanel.Background>
                <ImageBrush ImageSource="{StaticResource BgHintsKey}" Stretch="Uniform" AlignmentY="Top" AlignmentX="Center"></ImageBrush>
            </StackPanel.Background>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="18"/>
                    <RowDefinition Height="65"/>
                </Grid.RowDefinitions>

                <TextBlock
					Grid.Row="0"
					VerticalAlignment="Center"
					HorizontalAlignment="Center"
					FontFamily="Verdana"
					FontSize="12"
					FontWeight="Bold"
					Foreground="#909090">Genesis</TextBlock>
                <Grid
					Grid.Row="1"
					Margin="10, 3, 10, 3">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="65"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image
						Grid.Column="0"
						Source="{StaticResource RhLoreKey}"
						Width="60"
						Stretch="Uniform"></Image>
                    <TextBlock
						Grid.Column="1"
						x:Name="hintsBox"
						Margin="5, 0, 0, 0"
						Foreground="#bfbfbf"
						FontFamily="Verdana"
						TextAlignment="Center"
						FontSize="12">
							Bem-vindo(a)! Estamos trabalhando continuamente para melhorar o servidor.<LineBreak/>
							Durante este período, podem ocorrer alguns problemas; agradecemos sua<LineBreak/>
							paciência e compreensão. Desejamos a você um ótimo jogo!<LineBreak/>
							Novidades e comunicados serão publicados no nosso <Bold><Hyperlink NavigateUri="https://discord.gg/KUR3GAKE" RequestNavigate="Discord_RequestNavigate">Discord</Hyperlink></Bold>.
                    </TextBlock>
                </Grid>

            </Grid>
        </StackPanel>

        <StackPanel
			Grid.Row="2"
			VerticalAlignment="Top" Margin="0,103,0,0">
            <Grid Width="800" Height="60" Margin="0,-17,0,0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Container para versão do Cliente -->
                <StackPanel
                    Grid.Column="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Margin="10,0,14,0">
                    <TextBlock
                        x:Name="labelClientTag"
                        FontFamily="Verdana"
                        FontSize="12"
                        FontWeight="Bold"
                        Foreground="#747474"
                        VerticalAlignment="Center"
                        Text="Client" Margin="1,0,0,0"/>
                </StackPanel>
                <!-- Container de versão do Launcher e botão de update -->
                <StackPanel Orientation="Horizontal" Margin="10,-20,266,0" VerticalAlignment="Center" Grid.ColumnSpan="2" Height="23">
                    <TextBlock
               x:Name="labelLauncherVersion"
               FontFamily="Verdana"
               FontSize="12"
               FontWeight="Bold"
               Foreground="#747474"
               Text="Launcher"/>
                    <Button
                   x:Name="buttonLauncherUpdate"
                   Width="52"
                   Height="20"
                   Visibility="Collapsed"
                   Click="buttonLauncherUpdate_Click" Background="#2000FF00" BorderBrush="#00000000" Margin="6,-2,0,0">
                        <Button.ToolTip>
                            <ToolTip x:Name="LauncherUpdateToolTip" Placement="Bottom"
                            Content="Atualização do Launcher disponível. Clique aqui para atualizar."/>
                        </Button.ToolTip>
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <Image
               x:Name="buttonLauncherUpdateIcon"
               Source="{StaticResource IconUpdateKey}"
               Stretch="Uniform"
               Height="20" Width="8" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform AngleX="0"/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                    </Button>
                    <!-- Removido botão duplicado de atualização do launcher para evitar sobreposição visual -->
                </StackPanel>
                <!-- Logo da empresa com ícone de atualização do Launcher ao lado -->
                <StackPanel
                    Grid.Column="1"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,0">
                    <Image
                        x:Name="ImageLogoCompany"
                        Source="{StaticResource LogoCompanyKey}"
                        Height="42"
                        Stretch="Uniform"
                        Width="286"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>

