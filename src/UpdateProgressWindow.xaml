<Window x:Class="ProgramaOTLauncher.UpdateProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aplicando Atualização..." Height="150" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" ShowInTaskbar="True" Topmost="True" >
    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="20">
            <TextBlock x:Name="StatusLabel" Text="Iniciando o aplicador de atualização..." HorizontalAlignment="Center" FontWeight="Bold"/>
            <ProgressBar x:Name="ProgressBar" Height="20" Margin="0,10,0,0" IsIndeterminate="True"/>
            <TextBlock x:Name="DetailsLabel" Text="" HorizontalAlignment="Center" Margin="0,5,0,0" FontSize="10" Foreground="Gray"/>
        </StackPanel>
    </Grid>
</Window>
